10 REM SIMPLE HANGMAN
20 DIM W$(10)
30 W$(1) = "APPLE"
40 W$(2) = "BANANA"
50 W$(3) = "CHERRY"
60 W$(4) = "ORANGE"
70 W$(5) = "GRAPE"
80 W = INT(RND(1)*5)+1
90 A$ = W$(W)
100 L = LEN(A$)
110 G$ = ""
120 FOR I = 1 TO L
130 G$ = G$ + "-"
140 NEXT I
150 M = 6
160 PRINT "HANGMAN"
170 PRINT G$
180 PRINT "GUESSES LEFT: "; M
190 INPUT "GUESS A LETTER"; C$
200 F = 0
210 FOR I = 1 TO L
220 IF MID$(A$,I,1) = C$ THEN G$ = LEFT$(G$,I-1) + C$ + RIGHT$(G$,L-I): F = 1
230 NEXT I
240 IF F = 0 THEN M = M - 1: PRINT "WRONG!"
250 IF G$ = A$ THEN PRINT "YOU WIN! THE WORD WAS "; A$: END
260 IF M = 0 THEN PRINT "YOU LOSE! THE WORD WAS "; A$: END
270 GOTO 170
